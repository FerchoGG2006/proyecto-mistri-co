generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  author    String
  date      String   // Keeping as string for now to match current UI format (YYYY-MM-DD)
  status    String   @default("Borrador")
  views     Int      @default(0)
  content   String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SiteSettings {
  id           Int    @id @default(1)
  siteName     String @default("Mistri&Co")
  description  String @default("Consultora argentina especializada en transformación organizacional")
  contactEmail String @default("contacto@mistri.com")
  metaTitle    String @default("Mistri&Co - Consultora Especializada")
  metaKeywords String @default("consultora, transformación, liderazgo")
  updatedAt    DateTime @updatedAt
}
